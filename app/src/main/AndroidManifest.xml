<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ramsey.myCloud">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity
            android:name=".User"
            android:label="个人中心"
            android:launchMode="singleTask" />
        <activity
            android:name=".Register"
            android:label="用户注册"
            android:launchMode="singleTop" />
        <activity
            android:name=".Resetpwd"
            android:label="密码修改"
            android:launchMode="singleTop" />
        <activity
            android:name=".CreateActivity"
            android:label="新建问题单"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UploadActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name=".CauseActivity" />
        <activity android:name=".ActionActivity" />
        <activity android:name=".ViewCauseActivity" />
        <activity android:name=".ViewActionActivity" />
        <activity android:name=".CreateCauseActivity" />
        <activity android:name=".CreateActionActivity" />
        <activity
            android:name=".ProblemDetail"
            android:label="@string/title_activity_problem_detail"
            android:theme="@style/AppTheme" />
        <activity android:name=".TheoreticState" />
        <activity android:name=".ImproveState" />
        <activity android:name=".ViewTempActionActivity">
        </activity>
        <activity android:name=".TempActionActivity" >
        </activity>
        <activity android:name=".CreateTempAction"></activity>
    </application>

</manifest>